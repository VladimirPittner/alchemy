body(data-spy='scroll', data-target='.js-scrollspy', data-offset=150)#top

  // offcanvas
  .l-offcanvas(data-role='offcanvas')

    // content main
    article#top.l-content-main

      include ../includes/_header.pug

      .l-content-main_inner

        block content

          unless categoryID == 0 && pageID == 0
            include ../includes/_nav_sub.pug

    aside.l-wrap-navs

        include ../includes/_nav_main.pug


