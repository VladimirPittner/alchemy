//- -----------------------------------------------
//- STYLEGUIDE LAYOUT
//- -----------------------------------------------

- var projectName = 'Alchemy'

//- -----------------------------------------------
//- VARIABLES AND DATA

include ../mixins/_components

//- -----------------------------------------------
//- OPTIONS

block opts

- var contents;
- var page;
- if(categoryID != -1) {
- var category = l_sitemap[categoryID].topics;
-   if(category[pageID].sub != undefined) {
-     contents = category[pageID].sub[subPageID].contents
-     page = category[pageID].sub[subPageID]
-   } else {
-     contents = category[pageID].contents
-     page = category[pageID]
-   }
- }

//- -----------------------------------------------
//- HTML

