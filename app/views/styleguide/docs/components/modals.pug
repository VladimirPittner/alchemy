        .modal-overlay#modal-demo
          article.modal
            header.modal_header
              .modal_header_headline
                h3.text-nospace.text-ellipsis Headline
              .modal_header_action
                a.btn.btn-link.modal_close.js-toggle(data-target='#modal-demo')
                  i.icon.icon-m close


            section.modal_content

