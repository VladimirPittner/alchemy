      +demo-code
        :code
          <!-- toggle button -->
          <button class="btn js-toggle" type="button" data-target="#modal-demo" data-toggle-self="false">Show modal</button>

          <!-- modal -->
          <div class="modal-overlay active" id="modal-demo">
            <article class="modal">

              <header class="modal_header">
                <div class="modal_header_headline">
                  <h3 class="text-nospace text-ellipsis">Headline</h3>
                </div>
                <div class="modal_header_action">
                  <a class="btn btn-link modal_close js-toggle" data-target="#modal-demo">
                    <i class="icon icon-m">close</i>
                  </a>
                </div>
              </header>

              <section class="modal_content">
                ...
              </section>

              <footer class="modal_footer">
                <div class="btn-line text-right">
                  <button class="btn btn-small btn-link no-pad-right js-toggle" type="button" data-target="#modal-demo">Cancel</button>
                  <button class="btn btn-small btn-link no-pad-right js-toggle" type="button" data-target="#modal-demo">Ok</button>
                </div>
              </footer>

            </article>
          </div>
    //- end: demo

